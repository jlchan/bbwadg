Merge "../meshes/sphere83762.msh";

General.Clip0A = 0;
General.Clip0B = 0;
General.Clip0C = -1;
General.Clip0D = -.2;
General.ClipOnlyDrawIntersectingVolume = 0;
General.ClipOnlyVolume = 0;
General.ClipWholeElements = 1;
General.RotationX = 280; 
General.RotationY = 1; 
General.RotationZ = 130;

General.Trackball = 0;
General.Axes = 0;
General.SmallAxes = 0;

Geometry.Points = 0;
Mesh.SurfaceFaces = 0;
Mesh.SurfaceEdges = 0;
